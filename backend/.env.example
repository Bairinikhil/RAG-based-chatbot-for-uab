# Database Configuration
# Replace with your PostgreSQL database URL
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# API Keys
# Get your Firecrawl API key from https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Flask Configuration
FLASK_ENV=development

# Embedding Configuration
# Use local Sentence Transformers for embeddings (free, no quota limits!)
USE_SENTENCE_TRANSFORMERS=true

# Ollama Configuration (Optional - for local LLM)
# Set USE_OLLAMA to true if you want to use local LLM instead of template-based responses
USE_OLLAMA=false
OLLAMA_MODEL=llama3.2:1b
OLLAMA_BASE_URL=http://localhost:11434

# LLM Generation
# Skip LLM generation and use template-based formatting instead
SKIP_LLM_GENERATION=true
